        <Label Content="Temat" HorizontalAlignment="Left" Height="31" Margin="10,65,0,0" VerticalAlignment="Top" Width="54"/>
        <Label Content="Treść" HorizontalAlignment="Left" Height="41" Margin="15,96,0,0" VerticalAlignment="Top" Width="49"/>
        <TextBox x:Name="txtTitle" HorizontalAlignment="Left" Height="21" Margin="69,70,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="132"/>
        <TextBox x:Name="txtBody" HorizontalAlignment="Left" Height="205" Margin="69,96,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="365"/>
        <Label Content="Oddbiorcy: " HorizontalAlignment="Left" Height="10" Margin="232,70,0,0" VerticalAlignment="Top" Width="142"/>
        <Label Content="Odbiorcy:" HorizontalAlignment="Left" Height="31" Margin="439,70,0,0" VerticalAlignment="Top" Width="66"/>
        <ListBox x:Name="emailsList" HorizontalAlignment="Left" Height="20" Margin="450,96,0,0" VerticalAlignment="Top" Width="138"/>

    </Grid>
</Window>
